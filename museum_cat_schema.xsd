<?xml version="1.0" encoding="UTF-8"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema">
    <xs:element name="museum-catalog">
        <xs:complexType>
            <xs:sequence>
                <xs:element name="museum-list">
                    <xs:complexType>
                        <xs:sequence>
                            <xs:element name="museum" maxOccurs="unbounded">
                                <xs:complexType>
                                    <xs:sequence>
                                        <xs:element name="id" type="xs:integer" />
                                        <xs:element name="name" type="xs:string" />
                                        <xs:element name="image">
                                            <xs:complexType>
                                                <xs:attribute name="location" type="xs:ENTITY"/>
                                            </xs:complexType>
                                        </xs:element>
                                        <xs:element name="region" type="xs:string"/>
                                        <xs:element name="regionID" type="xs:integer" />
                                        <xs:element name="scope" type="xs:string" />
                                        <xs:element name="type" type="xs:string" >
                                            <xs:simpleType>
                                                <xs:restriction base="xs:string">
                                                    <xs:enumeration value="национален" />
                                                    <xs:enumeration value="регионален" />
                                                    <xs:enumeration value="общински" />
                                                </xs:restriction>
                                            </xs:simpleType>
                                        </xs:element>
                                        <xs:element name="typeID" type="xs:integer" />
                                        <xs:element name="description" type="xs:string" />
                                        <xs:element name="website" minOccurs="0">
                                            <xs:complexType>
                                                <xs:simpleContent>
                                                    <xs:extension base="xs:string">
                                                        <xs:attribute name="href" />
                                                    </xs:extension>
                                                </xs:simpleContent>
                                            </xs:complexType>
                                        </xs:element>
                                        <xs:element name="address" type="xs:string" />
                                        <xs:element name="phone" type="xs:string" />
                                    </xs:sequence>
                                </xs:complexType>
                            </xs:element>
                        </xs:sequence>
                    </xs:complexType>
                </xs:element>
                <xs:element name="region" maxOccurs="1">
                    <xs:complexType>
                        <xs:sequence>
                            <xs:element name="regionInfo" maxOccurs="unbounded">
                                <xs:complexType>
                                    <xs:simpleContent>
                                        <xs:extension base="xs:string">
                                            <xs:attribute name="regionRef" type="xs:string" />
                                            <xs:attribute name="regionIDRef" type="xs:integer" />
                                        </xs:extension>
                                    </xs:simpleContent>
                                </xs:complexType>
                            </xs:element>
                        </xs:sequence>
                    </xs:complexType>
                </xs:element>
                <xs:element name="type" maxOccurs="1">
                    <xs:complexType>
                        <xs:sequence>
                            <xs:element name="typeInfo" maxOccurs="unbounded">
                                <xs:complexType>
                                    <xs:simpleContent>
                                        <xs:extension base="xs:string">
                                            <xs:attribute name="typeRef" type="xs:string" />
                                            <xs:attribute name="typeIDRef" type="xs:integer" />
                                        </xs:extension>
                                    </xs:simpleContent>
                                </xs:complexType>
                            </xs:element>
                        </xs:sequence>
                    </xs:complexType>
                </xs:element>
            </xs:sequence>
        </xs:complexType>
    </xs:element>
</xs:schema>